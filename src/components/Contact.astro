---
// src/components/sections/Contact.astro
import AnimateIn from './animations/AnimateIn';
---

<section id="contact" class="py-32 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-6">
    <AnimateIn client:visible animation="slideUp">
      <h2 class="text-4xl font-bold text-center mb-12 text-gray-900 dark:text-white">
        Get In Touch
      </h2>
    </AnimateIn>

    <AnimateIn client:visible animation="fadeIn" delay={0.2}>
      <div class="max-w-lg mx-auto">
        <form class="space-y-6">
          <div>
            <AnimateIn client:visible animation="slideUp" delay={0.2}>
              <label class="block text-sm font-medium mb-2 text-gray-900 dark:text-white">
                Name
              </label>
              <input
                type="text"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-700 
                       bg-white dark:bg-gray-800 text-gray-900 dark:text-white
                       focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Your name"
              />
            </AnimateIn>
          </div>

          <div>
            <AnimateIn client:visible animation="slideUp" delay={0.3}>
              <label class="block text-sm font-medium mb-2 text-gray-900 dark:text-white">
                Email
              </label>
              <input
                type="email"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-700 
                       bg-white dark:bg-gray-800 text-gray-900 dark:text-white
                       focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="your@email.com"
              />
            </AnimateIn>
          </div>

          <div>
            <AnimateIn client:visible animation="slideUp" delay={0.4}>
              <label class="block text-sm font-medium mb-2 text-gray-900 dark:text-white">
                Message
              </label>
              <textarea
                rows="4"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-700 
                       bg-white dark:bg-gray-800 text-gray-900 dark:text-white
                       focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Your message..."
              ></textarea>
            </AnimateIn>
          </div>

          <AnimateIn client:visible animation="slideUp" delay={0.5}>
            <button
              type="submit"
              class="w-full px-6 py-3 bg-blue-600 text-white rounded-lg font-medium 
                     hover:bg-blue-700 transition-all hover:-translate-y-1"
            >
              Send Message
            </button>
          </AnimateIn>
        </form>
      </div>
    </AnimateIn>
  </div>
</section>