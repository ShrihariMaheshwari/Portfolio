---
// src/components/sections/Hero.astro
import AnimateIn from './animations/AnimateIn';

const technologies = [
  "TypeScript", "React", "Node.js", "Python", "AWS"
];
---

<section id='home' class="min-h-screen flex items-center justify-center relative bg-white dark:bg-gray-900">
  <!-- Subtle grid background -->
  <div class="absolute inset-0 bg-grid-gray-100 dark:bg-grid-gray-800 opacity-5"></div>

  <!-- Gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 to-white dark:from-gray-900 dark:to-gray-800"></div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      <AnimateIn client:load animation="slideUp">
        <span class="inline-block px-4 py-2 rounded-full bg-blue-100 dark:bg-blue-900/30 
                     text-blue-600 dark:text-blue-400 text-sm font-medium mb-5">
          Open to Work
        </span>
      </AnimateIn>

      <AnimateIn client:load animation="slideUp" delay={0.1}>
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-gray-900 dark:text-white">
          Hi, I'm <span class="text-blue-600 dark:text-blue-400">Shrihari</span>
        </h1>
      </AnimateIn>
      
      <AnimateIn client:load animation="slideUp" delay={0.2}>
        <h2 class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-6">
          Software Engineer specializing in 
          <span class="text-gray-900 dark:text-white font-semibold">
            Full Stack Development
          </span>
        </h2>
      </AnimateIn>

      <AnimateIn client:load animation="slideUp" delay={0.3}>
        <p class="text-gray-600 dark:text-gray-400 mb-8 text-lg">
          Building scalable applications and solving complex problems with clean, efficient code
        </p>
      </AnimateIn>

      <AnimateIn client:load animation="slideUp" delay={0.4}>
        <div class="flex flex-col sm:flex-row justify-center gap-4 mb-12">
          <a 
            href="#contact"
            class="px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 
                   transition-all hover:-translate-y-1 flex items-center justify-center gap-2"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            Let's Collaborate
          </a>
          <a 
            href="#projects"
            class="px-8 py-3 border border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white 
                   rounded-lg hover:border-blue-600 dark:hover:border-blue-400 transition-all hover:-translate-y-1 
                   flex items-center justify-center gap-2"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
            </svg>
            View Projects
          </a>
        </div>
      </AnimateIn>

      <!-- Tech Stack Pills -->
      <AnimateIn client:load animation="slideUp" delay={0.5}>
        <div class="flex flex-wrap justify-center gap-2 items-center text-sm">
          <span class="text-gray-600 dark:text-gray-400">Tech Stack:</span>
          {technologies.map((tech) => (
            <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 
                         rounded-full font-medium hover:-translate-y-1 transition-transform duration-200">
              {tech}
            </span>
          ))}
        </div>
      </AnimateIn>
    </div>
  </div>
</section>

<style>
  .bg-grid-gray-100 {
    background-image: linear-gradient(to right, #f1f5f9 1px, transparent 1px),
                      linear-gradient(to bottom, #f1f5f9 1px, transparent 1px);
    background-size: 24px 24px;
  }

  .bg-grid-gray-800 {
    background-image: linear-gradient(to right, #1f2937 1px, transparent 1px),
                      linear-gradient(to bottom, #1f2937 1px, transparent 1px);
    background-size: 24px 24px;
  }
</style>