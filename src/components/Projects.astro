---
// src/components/sections/Projects.astro
import AnimateIn from './animations/AnimateIn';

const projects = [
  {
    title: "Project One",
    description: "A full-stack web application built with modern technologies.",
    tags: ["React", "Node.js", "MongoDB"]
  }
  // Add more projects as needed
];
---

<section id="projects" class="py-32 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-6">
    <AnimateIn client:visible animation="slideUp">
      <h2 class="text-4xl font-bold text-center mb-12 text-gray-900 dark:text-white">
        Featured Projects
      </h2>
    </AnimateIn>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <AnimateIn client:visible animation="fadeIn" delay={index * 0.1}>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">
                {project.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4">
                {project.description}
              </p>
              <div class="flex flex-wrap gap-2">
                {project.tags.map(tag => (
                  <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-full text-sm">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </AnimateIn>
      ))}
    </div>
  </div>
</section>